<div class="mx-auto max-w-7xl mb-4 px-4 sm:px-6 lg:px-8">
  <%= render "shared/form_header", title: "Login or create an account", subtitle: "No passwords, just email and magic.", description: "If you have a registered account, enter your email address and a login link will be sent to you. If you do not have an account, one will be created for whatever email address you provide." %>
  <%= form_with url: login_path do |f| %>
    <div class="space-y-4">
      <%= f.hidden_field :redirect_path, value: @redirect_path %>
      <%= render "shared/email_field", form: f, model: @user, placeholder: "you@example.com" do %>
        By signing up you agree to our <%= link_to "Privacy Policy", privacy_policy_path, class: "font-semibold" %> and our <%= link_to "Terms of Service", tos_path, class: "font-semibold" %>
      <% end %>
      <div class="mt-6 flex items-center justify-end gap-x-6">
        <%= f.submit "Send Login Link", class: "rounded-md bg-cyan-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-cyan-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-cyan-600" %>
      </div>
    <% end %>
  </div>
</div>
